{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ESNext",
      "target": "ES2020",
      "declaration": true,
      "declarationDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "skipLibCheck": true, 
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  